  <% end %>

  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">Descripción</label>
    <%= form.text_area :description, class:"form-control", rows: "3", placeholder: "Aquí ingresa tu tweet" %>
  </div>
  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Nombre de usuario</label>
     <%= form.text_field :userName, class:"form-control", placeholder: "Aquí ingresa tu nombre" %>
  </div>
